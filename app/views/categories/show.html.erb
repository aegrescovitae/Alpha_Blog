<h1 class="center centertitle"><%= @category.name %></h1>
<div align="center">
  <% if logged_in? && current_user.admin? %>
    <%= link_to "Edit", edit_category_path(@category) %>
    <%= link_to "Delete", category_path, method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>
  <%= will_paginate @category_articles %>
</div>
<%= render 'articles/article', obj: @category_articles %>
<div align="center">
  <%= will_paginate @category_articles %>
</div>