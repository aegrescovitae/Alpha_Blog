<h1 class="center centertitle">All Categories</h1>

<div align="center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title center">
            <%= link_to "#{category.name}", category_path(category) %>
          </li>
          <li><p class="category-count"><%= pluralize(category.articles.count, "article") %></p></li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>